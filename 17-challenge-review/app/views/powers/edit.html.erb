<h1>edit a power</h1>

<% if flash[:errors] %>
    <%= flash[:errors] %>
<% end %>

<%= form_for(@power) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :heroine_ids %>
    <%= f.collection_check_boxes :heroine_ids, @heroines, :id, :name %>

    <%= f.submit %>
<% end %>